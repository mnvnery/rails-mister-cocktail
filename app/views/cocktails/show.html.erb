
<div class="card-product">
<img src="<%= @cocktail.image_url %>" alt="cocktail">
<div class="card-product-infos">
<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> - <%= dose.ingredient.name %>
  <a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="<%= dose_path(dose.id) %>">
  Delete
</a></li>
  <% end %>
</ul>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: 'align-self-end' %>
</div>
</div>



<a href="<%= cocktails_path %>">
  <img src="https://static.thenounproject.com/png/648089-200.png" alt="" style="width: 30px">
</a>
